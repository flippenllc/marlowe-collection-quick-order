# Backend server configuration
PORT=3000

# PostgreSQL connection string. Example uses local development defaults.
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/marlowe_collection
# Set to "true" when connecting to managed Postgres that requires TLS.
# Render's managed PostgreSQL enforces TLS, so be sure DATABASE_SSL=true there.
DATABASE_SSL=false

# Contractor portal access code
CONTRACTOR_ACCESS_CODE=marlowecontract

# Outgoing email (orders + confirmations)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=you@example.com
SMTP_PASS=replace-me
OWNER_EMAIL=owner@example.com
FROM_EMAIL=orders@themarlowe.co
